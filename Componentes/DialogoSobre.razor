<MudDialog>
    <TitleContent>
        <div style="display: flex; align-items: center;">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-3" />
            Sobre o Editor de Diagramas
        </div>
    </TitleContent>
    <DialogContent>
        <div style="max-height: 70vh; overflow-y: auto;">
            
            <MudText Typo="Typo.h5" Class="mb-3" Align="Align.Center">📊 Editor de Diagramas Mermaid</MudText>
            
            <MudPaper Class="pa-4 mb-4" Elevation="1">
                <MudText Typo="Typo.h6" Class="mb-2">🔖 Versão</MudText>
                <MudText Typo="Typo.body1">1.0.0</MudText>
            </MudPaper>

            <MudPaper Class="pa-4 mb-4" Elevation="1">
                <MudText Typo="Typo.h6" Class="mb-2">👨‍🏫 Autor</MudText>
                <MudText Typo="Typo.body1">Professor Dr. André Campos</MudText>
            </MudPaper>

            <MudPaper Class="pa-4 mb-4" Elevation="1">
                <MudText Typo="Typo.h6" Class="mb-2">📜 Licença</MudText>
                <MudText Typo="Typo.body1" Class="mb-2">
                    Este produto é <strong>totalmente gratuito</strong> e de código aberto.
                </MudText>
                <MudText Typo="Typo.body2">
                    Você pode usar, modificar e distribuir livremente para qualquer tipo de atividade, 
                    seja educacional, comercial ou pessoal, sem restrições.
                </MudText>
            </MudPaper>

            <MudPaper Class="pa-4" Elevation="1">
                <MudText Typo="Typo.h6" Class="mb-2">🛠️ Tecnologias</MudText>
                <MudChip T="string" Size="Size.Small" Color="Color.Primary" Class="ma-1">Blazor WebAssembly</MudChip>
                <MudChip T="string" Size="Size.Small" Color="Color.Secondary" Class="ma-1">MudBlazor</MudChip>
                <MudChip T="string" Size="Size.Small" Color="Color.Tertiary" Class="ma-1">Mermaid.js</MudChip>
                <MudChip T="string" Size="Size.Small" Color="Color.Info" Class="ma-1">.NET 9</MudChip>
            </MudPaper>

        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Fechar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    
    void Submit() => MudDialog?.Close();
}
