@inherits LayoutComponentBase

<MudThemeProvider Theme="_tema" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="layout-sem-scroll">
    <MudAppBar Elevation="1" Dense="true" Color="Color.Primary">
        <MudIconButton Icon="Icons.Material.Filled.AccountTree" Color="Color.Inherit" Size="Size.Small" Class="mr-2" />
        <MudText Typo="Typo.h6">Diagramas Expert</MudText>
    </MudAppBar>
    <MudMainContent Class="conteudo-principal">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _tema => new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = Colors.Blue.Default,
            Secondary = Colors.Green.Accent4,
            AppbarBackground = Colors.Blue.Default,
        }
    };
}
